public class ShipNavigationSystem { 

    private final static ArrayList<Ship> mShips = new ArrayList<Ship>();
    private final static Screen mScreen = new Screen(30, 10);


    public static void main(String[] args) {
        
    	Screen screen = new Screen(30, 10);
        //screen.set(10, 2, 'X');
        //screen.set(20, 8, 'Y');
        final String[] MENU = { 
                "1. Neues Schiff", 
                "2. Neue Position",
                "3. Ende" 
        };
        screen.setMenu(MENU);
     
        screen.print();
        
        String input = screen.userInput("Ihre Wahl: ");
        System.out.println("User-Input: >" + input + "<\n");
        
        System.out.println("screen.get(10, 2): '" + screen.get(10, 2)+"'");
        System.out.println("screen.get( 1, 1): '" + screen.get( 1, 1)+"'");
        
    }
    
   
